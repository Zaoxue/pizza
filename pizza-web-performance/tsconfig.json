{
  "compilerOptions": {
    "experimentalDecorators": true,
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "lib": [
      "es2015",
      "dom",
      "es6",
    ],
    "baseUrl": "./",
    "paths": {
      "@pages/*": [
        "src/electron-render/pages/*"
      ],
      "@ui/*": [
        "src/electron-render/ui/*"
      ],
      "@utils/*": [
        "src/electron-render/utils/*"
      ],
      "@entities/*": [
        "src/electron-render/entities/*"
      ],
      "@components/*": [
        "src/electron-render/components/*"
      ]
    }
  },
  "include": [
    "./src/**/*"
  ]
}